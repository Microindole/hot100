{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "(mkdirs) Create build directory",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "if",
                "not",
                "exist",
                "${workspaceFolder}\\build\\${relativeFileDirname}",
                "mkdir",
                "${workspaceFolder}\\build\\${relativeFileDirname}"
            ],
            "problemMatcher": []
        },
        {
            "label": "C/C++: g++ build",
            "type": "cppbuild",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\build\\${relativeFileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "Path": "D:/msys2/ucrt64/bin;${env:Path}"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Compiler: g++.exe",
            "dependsOn": [
                "(mkdirs) Create build directory"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:/msys2/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "D:/msys2/ucrt64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}