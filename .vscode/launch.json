{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\${relativeFileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\build\\${relativeFileDirname}",
            
            // ----------------------------------------------------
            // 关键修复：添加此 "environment" 块
            // ----------------------------------------------------
            "environment": [
                {
                    // 确保程序能找到 g++ 的 .dll 依赖库
                    "name": "Path",
                    "value": "D:/msys2/ucrt64/bin;${env:Path}" 
                }
            ],
            // ----------------------------------------------------

            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "D:/msys2/ucrt64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build"
        }
    ]
}